{
  "name": "mern-store",
  "version": "1.0.0",
  "description": "a MERN store app",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "cd frontend && npm run build",
    "install-frontend": "cd frontend && npm install",
    "heroku-postbuild": "npm run install-frontend && npm run build",
    "frontend": "cd frontend && npm start",
    "backend": "cd backend && npm start",
    "start": "concurrently --kill-others-on-fail \"npm run backend\" \"npm run frontend\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peteriv9606/mern-store.git"
  },
  "keywords": [
    "MERN",
    "store",
    "app",
    "Mongo",
    "MongoDB",
    "Express",
    "React",
    "Node"
  ],
  "author": "Petar Ivanov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/peteriv9606/mern-store/issues"
  },
  "homepage": "https://github.com/peteriv9606/mern-store#readme",
  "dependencies": {
    "concurrently": "^6.2.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "mongoose": "^5.12.14",
    "nodemon": "^2.0.7"
  }
}
